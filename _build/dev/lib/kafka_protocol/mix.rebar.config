{deps,[{snappyer,".*",
                 {git,"https://github.com/zmstone/snappyer",{tag,undefined}}},
       {crc32cer,".*",
                 {git,"https://github.com/zmstone/crc32cer",{tag,"0.1.11"}}}]}.
{profiles,[{test,[{deps,[{snappyer,"1.2.9"},{lz4b,"0.0.11"}]}]}]}.
{erl_opts,[error,warn_unused_vars,warn_shadow_vars,warn_unused_import,
           warn_obsolete_guard,debug_info,
           {d,'APPLICATION',kafka_protocol}]}.
