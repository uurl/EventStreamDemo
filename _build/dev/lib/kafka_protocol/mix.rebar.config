                  {"LICENSE",#{title => "License"}},
                  {"NOTICE",#{title => "Notice"}}]},
         {main,"README.md"},
         {homepage_url,"https://hexdocs.pm/kafka_protocol"},
         {source_url,"https://github.com/kafka4beam/kafka_protocol"},
         {api_reference,false}]}.
{overrides,[]}.
